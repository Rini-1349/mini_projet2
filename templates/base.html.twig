<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

        <title>{% block title %}The best movies ever{% endblock %}</title>

        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        {% block css %}{% endblock %}


        <!-- Custom styles for this template -->
        <link href="album.css" rel="stylesheet">


    </head>
    <body>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-5">
            <div class="container">
                <a class="navbar-brand" href="{{ path('home') }}">BestMovies</a>
            </div>
        </nav>
        {# Ajoute des messages flash s'il y en a #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div id="fb-root"></div>
        {% block body %}{% endblock %}
        <!-- FOOTER -->
        <footer class="bg-dark w-100 py-5 mt-5">
            <div class="container">
                <p class="float-right text-white"><a href="#">Back to top</a></p>
                <p class="text-white">&copy; 2020 BestMovies</p>
            </div>
        </footer>
        {% block javascripts %}{% endblock %}
    </body>
</html>
